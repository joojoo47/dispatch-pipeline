      ]
    },
    "List Volumes": {
      "main": [
        [
          {
            "node": "Filter Orphaned Volumes",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Filter Orphaned Volumes": {
      "main": [
        [
          {
            "node": "Delete Orphaned Volumes",
